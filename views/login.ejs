<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>SoccerTour</title>
	<link rel="stylesheet" type="text/css" href="css/login.css">

	<script src="../public/js/signup.js"></script>

</head>
<body>

	<header>
		<div class="logo">
			<h1>SoccerTour</h1>
		</div>
		<div class="navMenu">
			<ul>
				<li><a class="signup" href="/signup">Signup</a></li>
			</ul>
		</div>
	</header>

	<section>
		<div class="centerTitle">
			<h2>Login</h2>
		</div>
		<div class="centerInfo">
			<form method="POST" action="/login">
				<div class="username">
					<label for="username">Username</label>
				</div>
				<div class="usernameInput">
					<input type="text" name="username">
				</div>
				
				<div class="password">
					<label for="password">Password</label>
				</div>
				<div class="passwordInput">
					<input type="password" name="password">
				</div>
				<p><%= Error %> </p>
				<div class="button">
					<input type="submit" value="submit">
				</div>

			</form>
			<script>
			  window.fbAsyncInit = function() {
			    FB.init({
			      appId            : '179691054337099',
			      autoLogAppEvents : true,
			      xfbml            : true,
			      version          : 'v12.0'
			    });
			  };
			</script>
			<script async defer crossorigin="anonymous" src="https://connect.facebook.net/en_US/sdk.js"></script>

			<div class="fb-login-button" data-width="15" data-size="medium" data-button-type="login_with" data-layout="default" data-auto-logout-link="true" data-use-continue-as="false">
			Sign in with Facebook
			</div>

		</div> <!--end of centerInfo-->
	</section>

	<footer>
		<h4>Footer</h4>
	</footer>
</body>

</html>